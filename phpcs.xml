<ruleset name="Aelian Standard">
    <description>Padrões de estilo de código da Aelian</description>
    <rule ref="SlevomatCodingStandard">
        <exclude name="SlevomatCodingStandard.Namespaces.UseOnlyWhitelistedNamespaces"/>
        <exclude name="SlevomatCodingStandard.Namespaces.FullyQualifiedGlobalFunctions"/>
        <exclude name="SlevomatCodingStandard.Namespaces.FullyQualifiedGlobalConstants"/>
        <exclude name="SlevomatCodingStandard.ControlStructures.DisallowEmpty"/>
        <exclude name="SlevomatCodingStandard.Classes.DisallowMultiPropertyDefinition"/>
        <exclude name="SlevomatCodingStandard.Classes.ForbiddenPublicProperty"/>
        <exclude name="SlevomatCodingStandard.Classes.RequireAbstractOrFinal.ClassNeitherAbstractNorFinal"/>
        <exclude name="SlevomatCodingStandard.Arrays.TrailingArrayComma"/>
        <exclude name="SlevomatCodingStandard.Functions.TrailingCommaInCall.MissingTrailingComma"/>
        <exclude name="SlevomatCodingStandard.TypeHints"/>
        <exclude name="SlevomatCodingStandard.ControlStructures.RequireYodaComparison"/>
        <exclude name="SlevomatCodingStandard.Files.TypeNameMatchesFileName"/>
        <exclude name="SlevomatCodingStandard.ControlStructures.BlockControlStructureSpacing"/>
        <exclude name="SlevomatCodingStandard.Numbers.RequireNumericLiteralSeparator"/>
        <exclude name="SlevomatCodingStandard.Functions.StrictCall.StrictParameterMissing"/>
        <exclude name="SlevomatCodingStandard.Operators.DisallowIncrementAndDecrementOperators"/>
        <exclude name="SlevomatCodingStandard.Exceptions.ReferenceThrowableOnly.ReferencedGeneralException"/>
    </rule>
    <rule ref="CakePHP">
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
        <exclude name="PSR1.Files.SideEffects"/>
        <exclude name="PSR2.Classes.ClassDeclaration.OpenBraceNewLine"/>
        <exclude name="PSR2.Classes.ClassDeclaration.CloseBraceAfterBody"/>
        <exclude name="PSR2.Files.EndFileNewline.NoneFound"/>
        <exclude name="PSR2.Files.ClosingTag.NotAllowed"/>
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine"/>
        <exclude name="Generic.Arrays.DisallowLongArraySyntax.Found"/>
        <exclude name="Generic.Files.LineEndings"/>
        <exclude name="Squiz.WhiteSpace.SuperfluousWhitespace.EndLine"/>
        <exclude name="CakePHP.WhiteSpace.TabAndSpace"/>
        <exclude name="CakePHP.Commenting.FunctionComment.Missing"/>
        <exclude name="CakePHP.PHP.SingleQuote"/>
    </rule>
</ruleset>
